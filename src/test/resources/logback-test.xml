<configuration>
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-4relative [%thread] %-5level %logger{35} - %msg %n</pattern>
        </encoder>
        <withJansi>false</withJansi>
    </appender>

    <root level="info">
        <appender-ref ref="console"/>
    </root>
</configuration>
